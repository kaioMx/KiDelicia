<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Tcadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCadastro">

    <!-- header -->

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:background="#FDED14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="166dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@drawable/logo" />

    </FrameLayout>

    <!-- Email -->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escreva seu email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginStart="57dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/txtEmailCadastro"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        android:layout_marginStart="57dp"
        android:layout_marginTop="8dp"
        tools:text="example@gmail.com" />

    <!-- Senha -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEmailCadastro"
        android:layout_marginStart="57dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        android:layout_marginStart="57dp"
        android:layout_marginTop="8dp" />

    <!-- Confirme a Senha -->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirme sua senha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSenha"
        android:layout_marginStart="57dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/txtConfirmaSenha"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        android:layout_marginStart="57dp"
        android:layout_marginTop="8dp" />

    <!-- Telefone -->

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtConfirmaSenha"
        android:layout_marginStart="57dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/txtTelefone"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        android:layout_marginStart="57dp"
        android:layout_marginTop="8dp" />

    <!-- CPF -->

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTelefone"
        android:layout_marginStart="57dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/txtCpf"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView7"
        android:layout_marginStart="57dp"
        android:layout_marginTop="8dp" />

    <!-- BotÃ£o Confirmar -->

    <Button
        android:id="@+id/bConfirmar"
        android:layout_width="190dp"
        android:layout_height="66dp"
        android:backgroundTint="#118DFF"
        android:text="Confirmar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtCpf"
        android:layout_marginStart="110dp"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
