<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TsobreNos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDED14">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="155dp"
        android:layout_height="142dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/sobre" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Bem-vindo ao KiDelícia!"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="No Supermercado KiDelícia, nosso objetivo é fornecer a você e sua família produtos de alta qualidade a preços acessíveis, garantindo uma experiência de compra agradável e satisfatória."
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView11">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3_instagram"
                android:layout_width="18dp"
                android:layout_height="47dp"
                app:srcCompat="@drawable/instagram" />

            <Button
                android:id="@+id/btnInstagram"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FBFBFB"
                android:shadowColor="#B4B3B3"
                android:text="Instagram"
                android:textAlignment="textStart"
                android:textColor="#181616"
                android:textColorHighlight="#281010"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:iconTint="#6B1010"
                app:rippleColor="#0F0D0D"
                app:strokeColor="#090707" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5_instagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3_whats"
                android:layout_width="13dp"
                android:layout_height="47dp"
                app:srcCompat="@drawable/whats" />

            <Button
                android:id="@+id/btnWhats"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FBFBFB"
                android:text="(34) 99867-6177"
                android:textAlignment="textStart"
                android:textColor="#181616"
                android:textColorHighlight="#281010"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:iconTint="#6B1010"
                app:rippleColor="#FDFBFB"
                app:strokeColor="#090707" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5_whats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3_facebook"
                android:layout_width="9dp"
                android:layout_height="47dp"
                app:srcCompat="@drawable/facebook" />

            <Button
                android:id="@+id/btnFacebook"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FBFBFB"
                android:text="Facebook"
                android:textAlignment="textStart"
                android:textColor="#181616"
                android:textColorHighlight="#281010"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:iconTint="#6B1010"
                app:rippleColor="#0F0D0D"
                app:strokeColor="#090707" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/line" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/Tadm"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/casa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/jornalButton"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/jornalButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/jornal"
                app:layout_constraintStart_toEndOf="@id/Tadm"
                app:layout_constraintEnd_toStartOf="@id/ofertaButton"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/ofertaButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/oferta"
                app:layout_constraintStart_toEndOf="@id/jornalButton"
                app:layout_constraintEnd_toStartOf="@id/contaButton"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/contaButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/conta"
                app:layout_constraintStart_toEndOf="@id/ofertaButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
