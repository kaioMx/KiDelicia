<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TsobreNos"
    android:layout_width="match_parent"
    android:background="#FDED14"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="274dp"
        android:layout_height="185dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="18dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/instagram" />

            <Button
                android:id="@+id/sair"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FBFBFB"
                android:shadowColor="#B4B3B3"
                android:text="instagram"
                android:textAlignment="textStart"
                android:textColor="#181616"
                android:textColorHighlight="#281010"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:iconTint="#6B1010"
                app:rippleColor="#0F0D0D"
                app:strokeColor="#090707" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/line" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="13dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/whats" />

            <Button
                android:id="@+id/sair"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FBFBFB"
                android:text="(34) 99867-6177"
                android:textAlignment="textStart"
                android:textColor="#181616"
                android:textColorHighlight="#281010"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:iconTint="#6B1010"
                app:rippleColor="#FDFBFB"
                app:strokeColor="#090707" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/line" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="9dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/facebook" />

            <Button
                android:id="@+id/sair"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FBFBFB"
                android:text="facebook"
                android:textAlignment="textStart"
                android:textColor="#181616"
                android:textColorHighlight="#281010"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:iconTint="#6B1010"
                app:rippleColor="#0F0D0D"
                app:strokeColor="#090707" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/line" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/casa" />

        <ImageButton
            android:id="@+id/listButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="105dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/jornal" />

        <ImageButton
            android:id="@+id/cartButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="105dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/oferta" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/conta" />
    </FrameLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="155dp"
        android:layout_height="142dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/sobre"
        tools:layout_editor_absoluteY="35dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="188dp"
        android:layout_height="76dp"
        android:fontFamily="@font/roboto"
        android:text="Bem-vindo ao KiDelícia!
"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="177dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="238dp"
        android:layout_height="105dp"
        android:fontFamily="@font/roboto"
        android:text="No Supermercado KiDelícia, nosso objetivo é fornecer a você e sua família produtos de alta qualidade a preços acessíveis, garantindo uma experiência de compra agradável e satisfatória."
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="253dp" />

</androidx.constraintlayout.widget.ConstraintLayout>