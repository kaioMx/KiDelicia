<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Tconta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- header -->

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="410dp"
        android:layout_height="88dp"
        android:background="#FDED14"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="166dp"
            android:layout_height="88dp"
            android:layout_gravity="start|center"
            android:layout_margin="16dp"
            android:src="@drawable/logo"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/notificationIcon"
            android:layout_width="41dp"
            android:layout_height="46dp"
            android:layout_gravity="end|center"
            android:layout_margin="16dp"
            android:background="@drawable/notificacao"
            tools:ignore="MissingConstraints" />
    </FrameLayout>

    <!-- header -->

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="414dp"
        android:layout_height="536dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints,UnknownId"
        tools:layout_editor_absoluteY="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Repeat for other stores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/fundo"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/loja1"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:src="@drawable/loja1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="2"
                    android:paddingStart="8dp"
                    android:text="Ki Delícia Supermercados - Loja Alfredo Freire"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/fundo"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:src="@drawable/loja2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingStart="8dp"
                    android:text="Ki Delícia Supermercados - Loja Alfredo Freire"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/fundo"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:src="@drawable/loja3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingStart="8dp"
                    android:text="Ki Delícia Supermercados - Loja Alfredo Freire"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/fundo"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:src="@drawable/loja4" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingStart="10dp"
                    android:text="Ki Delícia Supermercados - Loja Alfredo Freire"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <!-- footer -->
    <FrameLayout
        android:id="@+id/footer"
        android:layout_width="413dp"
        android:layout_height="90dp"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="643dp">

        <!--borda-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_gravity="top"
            android:background="@color/black" />

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/casa"
            tools:src="@drawable/casa" />

        <ImageButton
            android:id="@+id/listButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="105dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/jornal" />

        <ImageButton
            android:id="@+id/cartButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="105dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/oferta" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/conta" />
    </FrameLayout>
    <!-- footer -->

</androidx.constraintlayout.widget.ConstraintLayout>
